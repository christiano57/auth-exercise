<h1>Hello, <%= @name %>!</h1>

<% if current_user %>
  <%= link_to "My profile", "/profile" %><br>
  <%= link_to "Log out", "/logout" %>
<% elsif current_user && @current_user.role == "admin" %>
  <%= link_to "My profile", "/profile" %><br>
  <%= link_to "All profiles", "/users" %><br>
  <%= link_to "Log out", "/logout" %>
<% else %>
  <%= link_to "Sign up", "/signup" %><br>
  <%= link_to "Log in", "/login" %>
<% end %>

